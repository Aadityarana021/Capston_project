package stepDefinitions;

import org.openqa.selenium.WebDriver;
import io.cucumber.java.en.*;
import pageObjects.AccountSummaryLoginPage;
import static org.testng.Assert.*;

public class AccountSummarySteps {
    WebDriver driver = AccountSummaryLoginSteps.getDriver(); // âœ… Reusing session
    AccountSummaryLoginPage accountSummaryPage;

    @When("User navigates to the Account Summary page")
    public void user_navigates_to_account_summary() {
        accountSummaryPage = new AccountSummaryLoginPage(driver);
        accountSummaryPage.goToAccountSummaryLoginPage();
    }

    @Then("Account Summary page should display account types and balances")
    public void verify_account_summary_details() {
        assertTrue(accountSummaryPage.isAccountSummaryDisplayed(), "Account Summary Page not displayed correctly!");
        driver.quit();  // Close session after verification
    }
}
