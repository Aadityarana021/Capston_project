package stepDefinitions.accountSummary_TC6;

import org.openqa.selenium.WebDriver;
import io.cucumber.java.en.*;
import pageObjects.ValidateAccountBalancesPage_TC6;
import stepDefinitions.accountSummary_TC4.AccountSummaryLoginSteps_TC4;
import static org.testng.Assert.*;

public class ValidateAccountBalancesSteps_TC6 {
    WebDriver driver = AccountSummaryLoginSteps_TC4.getDriver();  // ✅ Reusing existing login class
    ValidateAccountBalancesPage_TC6 validateAccountBalancesPage;

    @When("User navigates to Transfer Funds page")
    public void user_navigates_to_transfer_funds() {
        validateAccountBalancesPage = new ValidateAccountBalancesPage_TC6(driver);
        validateAccountBalancesPage.navigateToTransferFunds();
    }

    @And("User selects From Account and To Account")
    public void user_selects_accounts() {
        validateAccountBalancesPage.selectFromAccount();
        validateAccountBalancesPage.selectToAccount();
    }

    @And("User clicks on Continue")
    public void user_clicks_continue() {
        validateAccountBalancesPage.clickSubmit();
    }

    @Then("User should see the transfer confirmation")
    public void verify_transfer_success() {
        // ✅ Add validation for success message if required
        System.out.println("Transfer completed successfully!");
        driver.quit();
    }
}
