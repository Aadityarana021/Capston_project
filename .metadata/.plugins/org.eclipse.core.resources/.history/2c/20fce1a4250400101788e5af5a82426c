package stepDefinitions.sessionExpiry_TC16;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import io.cucumber.java.en.*;
import org.testng.Assert;
import stepDefinitions.CommonSteps;
import stepDefinitions.accountSummary_TC4.AccountSummaryLoginSteps_TC4;

public class SessionExpirySteps_TC16 {
    WebDriver driver;

    public SessionExpirySteps_TC16() {
        this.driver = CommonSteps.getDriver();
    }

    @Given("User logs into Zero Bank")
    public void user_logs_into_zero_bank() {
        driver.findElement(By.id("user_login")).sendKeys("username");  // Update with correct ID
        driver.findElement(By.id("user_password")).sendKeys("password");  // Update with correct ID
        driver.findElement(By.name("submit")).click();  // Update if needed
    }

    @When("User logs out")
    public void user_logs_out() {
        driver.findElement(By.linkText("Logout")).click();  // Update locator if necessary
    }

    @When("User clicks the Back button in the browser")
    public void user_clicks_back_button() {
        driver.navigate().back();
    }

    @Then("User should not be able to access the previous page")
    public void verify_session_expiry() {
        boolean loginDisplayed = driver.findElement(By.id("user_login")).isDisplayed();
        Assert.assertTrue(loginDisplayed, "Session did not expire! User was able to access the previous page.");
    }
}
