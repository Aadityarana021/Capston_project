package stepDefinitions.sessionExpiry_TC16;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import io.cucumber.java.en.*;
import io.github.bonigarcia.wdm.WebDriverManager;

import org.testng.Assert;

public class SessionExpirySteps_TC16 {
    WebDriver driver;

    @Given("User logs into Zero Bank")
    public void user_logs_into_zero_bank() {
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.get("https://zero.webappsecurity.com/login.html"); // Update with actual login URL

        driver.findElement(By.id("user_login")).sendKeys("username");  // Update ID
        driver.findElement(By.id("user_password")).sendKeys("password");
        driver.findElement(By.name("submit")).click();
    }

    @When("User logs out")
    public void user_logs_out() {
        driver.findElement(By.linkText("Logout")).click();  // Update locator
    }

    @When("User clicks the Back button in the browser")
    public void user_clicks_back_button() {
        driver.navigate().back();
        driver.navigate().back();
    }

    @Then("User should not be able to access the previous page")
    public void verify_session_expiry() {
        boolean loginDisplayed = driver.findElement(By.id("user_login")).isDisplayed();
        Assert.assertTrue(loginDisplayed, "Session did not expire! User was able to access the previous page.");

        driver.quit(); // Close the browser after test execution
    }
}
