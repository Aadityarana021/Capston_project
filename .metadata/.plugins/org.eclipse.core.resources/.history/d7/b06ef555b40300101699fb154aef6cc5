package utilities;

import com.itextpdf.kernel.pdf.*;
import com.itextpdf.layout.Document;
import com.itextpdf.layout.element.Paragraph;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.text.SimpleDateFormat;
import java.util.Date;

public class PdfUtil {

    public static String savePDF(String content, String testName) {
        try {
            // 📌 Generate timestamp for unique file name
            String timestamp = new SimpleDateFormat("yyyyMMdd_HHmmss").format(new Date());

            // 📌 Define PDF file path
            String filePath = "pdf_reports/" + testName + "_" + timestamp + ".pdf";

            // 📌 Ensure the directory exists
            File dir = new File("pdf_reports");
            if (!dir.exists()) dir.mkdirs();

            // 📌 Create PDF document
            PdfWriter writer = new PdfWriter(new FileOutputStream(filePath));
            PdfDocument pdf = new PdfDocument(writer);
            Document document = new Document(pdf);
            
            // 📌 Add content to the PDF
            document.add(new Paragraph(content));
            
            // 📌 Close document
            document.close();

            System.out.println("✅ PDF saved at: " + filePath);
            return filePath;
        } catch (FileNotFoundException e) {
            System.out.println("❌ Failed to save PDF: " + e.getMessage());
            return null;
        }
    }
}
