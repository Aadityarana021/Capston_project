package stepDefinitions;

import io.cucumber.java.en.When;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import java.time.Duration;

public class CommonSteps {
    WebDriver driver;
    WebDriverWait wait;

    public CommonSteps(WebDriver driver) {
        if (driver == null) {
            throw new IllegalStateException("WebDriver is NULL! Ensure login is executed first.");
        }
        this.driver = driver;
        this.wait = new WebDriverWait(driver, Duration.ofSeconds(10)); // ✅ Explicit wait
    }

    @When("User navigates to {string} page")
    public void user_navigates_to_page(String pageName) {
        System.out.println("Navigating to " + pageName + " page...");

        // ✅ Click Online Banking first
        WebElement onlineBanking = wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//strong[normalize-space()='Online Banking']")));
        onlineBanking.click();
        System.out.println("Clicked Online Banking");

        // ✅ Click Account Summary next
        WebElement accountSummary = wait.until(ExpectedConditions.elementToBeClickable(By.id("account_summary_link")));
        accountSummary.click();
        System.out.println("Clicked Account Summary");

        // ✅ Navigate based on the required page
        switch (pageName.toLowerCase()) {
            case "transfer funds":
                WebElement transferFunds = wait.until(ExpectedConditions.elementToBeClickable(By.id("transfer_funds_tab")));
                transferFunds.click();
                System.out.println("Clicked Transfer Funds");
                break;

            case "pay bills":
                WebElement payBills = wait.until(ExpectedConditions.elementToBeClickable(By.id("pay_bills_tab")));
                payBills.click();
                System.out.println("Clicked Pay Bills");
                break;

            default:
                throw new IllegalArgumentException("Invalid page name: " + pageName);
        }
    }
}
