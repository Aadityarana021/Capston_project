package stepDefinitions;

import io.cucumber.java.en.When;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class CommonSteps {
    WebDriver driver;

    // ✅ Default constructor needed for Cucumber
    public CommonSteps() {
    }

    // ✅ Corrected constructor with WebDriver check
    public CommonSteps(WebDriver driver) {
        if (driver == null) {
            throw new IllegalStateException("❌ WebDriver is NULL! Ensure login is executed first.");
        }
        this.driver = driver;
    }

    @When("User navigates to Transfer Funds page")
    public void user_navigates_to_transfer_funds() {
        if (driver == null) {
            throw new IllegalStateException("❌ WebDriver is NULL! Cannot navigate.");
        }
        driver.findElement(By.id("transfer_funds_tab")).click();
        System.out.println("✅ User navigated to Transfer Funds page");
    }
}
